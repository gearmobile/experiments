.slider
    width: 100%
    height: 400px

    & .swiper-container

        width: 100%
        height: 100%

    & .swiper-slide
        display: flex
        justify-content: center
        align-items: center

        &:nth-child(1)
            background: url('%=static=%assets/slider/sample-01.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child(2)
            background: url('%=static=%assets/slider/sample-02.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child(3)
            background: url('%=static=%assets/slider/sample-03.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child(4)
            background: url('%=static=%assets/slider/sample-04.jpg') 50% 50% no-repeat
            background-size: cover