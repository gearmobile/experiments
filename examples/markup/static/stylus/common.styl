
*, *::before, *::after
    box-sizing: border-box

a
    text-decoration: none

ul, ol
    list-style-type: none
    padding: 0
    margin: 0

h1, h2, h3, h4, p
    margin: 0

html, body
    height 100%
    width: 100%

// Thanks Sara Soueidan
// ------------------------------------
svg
    transition: all .2s

svg path
    fill: inherit
// ------------------------------------

.page
    position: relative
    background-color: lightgrey

.page__wrapper
    min-height 100%
    margin-bottom -50px

* html .page__wrapper
    height 100%

.page__buffer
    height 50px