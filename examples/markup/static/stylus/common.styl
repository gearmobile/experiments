
*, *::before, *::after
    box-sizing: border-box

a
    text-decoration: none

ul, ol
    list-style-type: none
    padding: 0
    margin: 0

h1, h2, h3, h4, p
    margin: 0

code
    color: maroon
    font-family: monospace
    font-size: 1.4rem

html
    font-size: 62.5%

html, body
    height 100%
    width: 100%


// ------------------------------------
// THANKS SARA SOUEIDAN
// ------------------------------------
svg
    transition: all .2s

svg path
    fill: inherit
