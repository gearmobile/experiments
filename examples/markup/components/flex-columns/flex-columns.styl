.columns
    display: flex
    flex-wrap: wrap
    justify-content: center

    @media screen and ( max-width: 768px )
        flex-direction: column
        flex-wrap: nowrap
        height: 1000px

    &__item
        display: flex
        flex: 1 1 25%
        flex-direction: column

        @media screen and ( max-width: 980px )
            flex: 1 1 50%

        @media screen and ( max-width: 768px )
            flex: 1 1 0

        &--content
            background-color: sandybrown
            padding: 2rem
            border: .1rem solid firebrick

        &--empty
            border: .1rem solid whitesmoke

        & p
            font-size: 1.4rem
            line-height: 1.8

        &:nth-child(2)
        &:nth-child(4)
            background: blueviolet url( 'http://placekitten.com/200/300' ) 50% 50% no-repeat
            background-size: cover

    &__title
        text-transform: capitalize
        font-size: 3rem
        margin: 0 0 1rem
        letter-spacing: .1rem

    &__subtitle
        text-transform: uppercase
        font-size: 1.4rem
        margin: 0 0 2rem


