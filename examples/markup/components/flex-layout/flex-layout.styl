
// WRAPPER
// ---------------------------------------------

.wrapper
    display: flex
    flex-direction: column
    border: 1px solid #000

    // WRAPPER HEADER
    // ---------------------------------------------

    &__header
        padding: 40px 30px
        background-color: cornflowerblue
        text-align: center

        & h1
            font-size: 2rem
            text-transform: capitalize

    // WRAPPER MAIN
    // ---------------------------------------------

    &__main
        width: 100%

        &::before
        &::after
            content: ''
            display: table

        &::after
            clear: both

    // WRAPPER ITEM
    // ---------------------------------------------

    &__item
        float: left
        width: 48%
        height: 200px
        margin: 1%
        display: flex
        flex-direction: column

        &:nth-child( 1 ) .wrapper__image
            background: url('%=static=%assets/flex-layout/doggy.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child( 2 ) .wrapper__image
            background: url('%=static=%assets/flex-layout/doggy.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child( 3 ) .wrapper__image
            background: url('%=static=%assets/flex-layout/doggy.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child( 4 ) .wrapper__image
            background: url('%=static=%assets/flex-layout/doggy.jpg') 50% 50% no-repeat
            background-size: cover

    // WRAPPER IMAGE
    // ---------------------------------------------

    &__image
        height: 80%
        background-color: greenyellow
        position: relative

    // WRAPPER INFO
    // ---------------------------------------------

    &__info
        height: 20%
        background-color: salmon
        font: 10px/1.2 Arial, sans-serif
        text-transform: capitalize
        display: flex
        align-items: center
        justify-content: space-between
        padding: 0 1rem

    // WRAPPER PLAY
    // ---------------------------------------------

    &__play
        width: 10px
        height: 10px
        position: absolute
        top: 50%
        left: 50%
        transform: translate( -50%, -50% )

        &::before
            content: ''
            display: block
            width: 0
            height: 0
            border-style: solid
            border-width: 5px 0 5px 10px
            border-color: transparent transparent transparent darkred
            cursor: pointer
            transition: border-color .2s

        &:hover::before
            border-color: transparent transparent transparent red
