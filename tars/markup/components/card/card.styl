ul, ol
    list-style-type none
    padding 0
    margin 0

.card
    border 1px solid #000
    padding 20px 0

    &__item
        border 1px dotted green
        padding 10px 30px

        &:not(:last-child)
            margin 0 0 20px

    &__name
        text-transform uppercase
        font-weight 700
        color firebrick

        &:not(:last-child)
            margin 0 0 10px

    &__profession
        text-transform capitalize
        font-style italic
        padding 0 0 0 20px
        color salmon
