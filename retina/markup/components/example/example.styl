.block
    width 100%
    height 900px
    border 1px dashed blue
    background url( '%=static=%assets/example/background-fullsize.jpg' ) 50% 50% no-repeat
    background-size cover
    position relative

    // tablet
    // -------------------------------------------------------

    @media screen and ( max-width 768px ) and ( min-resolution: 96dpi )
        background url( '%=static=%assets/example/background-tablet@1x.jpg' ) 50% 50% no-repeat
        background-size cover

    @media screen and ( max-width 768px ) and ( min-resolution: 144dpi )
        background url( '%=static=%assets/example/background-tablet@2x.jpg' ) 50% 50% no-repeat
        background-size cover

    // mobile
    // -------------------------------------------------------

    @media screen and ( max-width 500px ) and ( min-resolution: 96dpi )
        background url( '%=static=%assets/example/background-mobile@1x.jpg' ) 50% 50% no-repeat
        background-size cover

    @media screen and ( max-width 500px ) and ( min-resolution: 144dpi )
        background url( '%=static=%assets/example/background-mobile@2x.jpg' ) 50% 50% no-repeat
        background-size cover

    @media screen and ( max-width 500px ) and ( min-resolution: 288dpi )
        background url( '%=static=%assets/example/background-mobile@3x.jpg' ) 50% 50% no-repeat
        background-size cover

.block__info
    position absolute
    top 0
    left 0
    border 2px solid #fff
    padding 20px
    display flex
    justify-content center
    align-items center
    color #fff

.block--image
    position absolute
    bottom 0
    right 0
    width 1050px
    height 645px

