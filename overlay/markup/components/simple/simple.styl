.simple
    lost-center 1200px flex

    &__item
        lost-column 1/3
        lost-column-gutter 15px
        min-height: 200px
        background-color: sandybrown

        &:hover .simple__cover
            visibility: visible
            opacity: 1

        &:nth-child(1) .simple__header
            background: url('%=static=%assets/simple/image-01.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child(2) .simple__header
            background: url('%=static=%assets/simple/image-02.jpg') 50% 50% no-repeat
            background-size: cover

        &:nth-child(3) .simple__header
            background: url('%=static=%assets/simple/image-01.jpg') 50% 50% no-repeat
            background-size: cover

        @media screen and ( max-width: 768px )
            lost-column 1/1
            lost-column-gutter 0

            &:nth-child( -n+2 )
                margin: 0 0 2rem

    &__header
        width: 100%
        height: 200px
        position: relative
        overflow: hidden

        @media screen and ( max-width: 768px )
            height: 300px

    &__cover
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: rgba( #000, .6 )
        display: flex
        justify-content: center
        align-items: center
        visibility: hidden
        opacity: 0
        transition: visibility .2s, opacity .2s

    &__nav
        display: flex
        justify-content: center
        align-items: center

    &__link
        width: 20px
        height: 20px
        border-radius: 50%
        margin: 0 10px
        transition: background-color .2s

        &--primo
            background-color: goldenrod

            &:hover
                background-color: darken( goldenrod, 10% )

        &--secondo
            background-color: yellowgreen

            &:hover
                background-color: darken( yellowgreen, 10% )

    &__footer
        padding: 20px
