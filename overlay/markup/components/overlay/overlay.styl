.overlay
    padding: 20px 0

    &__center
        lost-center: 1200px flex

    &__item
        lost-column: 1/3
        lost-column-gutter: 15px
        display: flex
        /*flex-direction: row*/
        align-items: stretch
        flex-direction: column
        min-height: 300px

        &:hover .overlay__cover
            visibility: visible
            opacity: 1

        @media screen and ( max-width: 768px )
            lost-column 1/1
            lost-column-gutter: 0

            &:nth-child( -n+2 )
                margin: 0 0 2rem

    &__header
        /*height: 20%*/
        flex: 1
        background-color: salmon
        position: relative
        overflow: hidden
        
    &__cover
        display: flex
        justify-content: center
        align-items: center
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(#000, .6);
        visibility: hidden
        opacity: 0
        transition: visibility .2s, opacity .2s

    &__nav
        display: flex
        justify-content: center
        align-items: center

    &__link
        width: 20px
        height: 20px
        border-radius: 50%
        margin: 0 10px
        transition: background-color .2s

        &--primo
            background-color: goldenrod

            &:hover
                background-color: darken( goldenrod, 10% )

        &--secondo
            background-color: hotpink

            &:hover
                background-color: darken( hotpink, 10% )

    &__image
        display: block
        width: inherit
        height: auto

    &__footer
        display: flex
        flex-direction: column
        flex: 2
        padding: 10px 16px
        background-color: lightgreen
