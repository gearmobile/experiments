// Common styles of the project

*, *::before, *::after
    box-sizing border-box

html, body
    height 100%
    width 100%

h1, h2, h3, h4
    margin: 0

p
    margin 0 0 20px

    &:last-of-type
        margin-bottom 0

img
    vertical-align: top

.page
    // Стили для body

.page__wrapper
    min-height 100%
    margin-bottom -50px


* html .page__wrapper
    height 100%

.page__buffer
    height 50px
