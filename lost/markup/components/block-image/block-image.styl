// block-image
// --------------------------------------------
.block-image
    //

    &__center
        lost-center 1000px flex
        border 2px solid #789
        padding 10px 20px
        margin-top 20px

        @media screen and ( max-width 768px )
            flex-direction column
            align-items center

    &__primary
        width 300px
        height 400px
        background url('%=static=%assets/block-image/sample-01.jpg') no-repeat
        margin 0 20px 0 0

        @media screen and ( max-width 768px )
            margin 0 0 20px

    &__content
        float left
        padding 20px 40px
        display flex
        flex-direction column
        justify-content space-between
        width calc( 100% - 300px - 20px )
        border 1px solid #000

        @media screen and ( max-width 768px )
            width 100%

    &__list
        list-style-type none
        padding 0
        margin 0
        display flex
        justify-content center

        @media screen and ( max-width 500px )
            flex-direction column
            align-items center

    &__item
        margin 0 1rem

        @media screen and ( max-width 500px )
            margin .4rem 0

    &__button
        display block
        width 120px
        height 40px
        background-color salmon
        border-radius 50em
        color #fff
        text-decoration none
        display flex
        justify-content center
        align-items center
