// Mixins.

m-nl()
    margin 0
    padding 0
    text-indent 0
    list-style none
    list-style-position outside

flex-centering()
    display: flex
    justify-content: center
    align-items: center

clearfix()
    &::before
    &::after
        content ''
        display table

    &::after
        clear both


m-blocks-justify()
    text-align justify
    text-justify newspaper


