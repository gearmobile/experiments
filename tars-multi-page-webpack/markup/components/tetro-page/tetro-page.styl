.tetro-page
    background-color #eee
    padding 20px 0

    & .center
        max-width 1200px
        margin auto
        padding 10px 0

    & .tetro-grid
        clearfix()
        background-color #fff

    & .tetro-page__content
        background-color salmon
        width 100%
        height 100%

    & .tetro-grid__sizer
    & .tetro-grid__item
        width calc( 100% / 3 )

    & .tetro-grid__item
        float left
        height 200px
        background-color #fff
        padding 20px
        counter-increment: index

        &::before
            content counter( index )
            color #fff
            font-size 20px
            position absolute
            top 50%
            left 50%
            transform translate( -50%, -50% )

        &--uno
            height 300px

        &--duo
            height 400px

        &--tre
            height 500px
