.first-page
    //

    & .center
        max-width: 1200px
        margin: auto
        padding: 0 10px

    & .grid
        clearfix()

        &__sizer
        &__item
            float: left

        &__item
            flex-centering()
            width: 25%
            height: 200px
            background-color: salmon
            border: 1px solid firebrick
            counter-increment index

            &--double
                height: 400px

            &::before
                content: counter( index )