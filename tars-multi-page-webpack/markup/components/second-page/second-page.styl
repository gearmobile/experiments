.second-page
    //

    & .center
        max-width: 1200px
        margin: auto
        padding: 0 10px

    & .grid
        clearfix()

        &__sizer
        &__item
            float: left

        &__item
            flex-centering()
            color: #ffffcc
            font-size: 20px
            font-weight: 700
            width: 25%
            height: 100px
            background-color: steelblue
            border: 1px solid grey
            counter-increment index

            &--secondo
                height: 200px

            &--tetro
                height: 300px

            &::before
                content: counter( index )
